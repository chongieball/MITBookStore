{% extends 'front-end/app.twig' %}

{% block title %} MIT Book Store {% endblock %}

{% block content %}
<section class="content">
	{% include 'templates/partials/flash.twig'%}
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h4 class="box-title"><b>Category</b></h4>
					</div>
					<div class="box-body">
						<div class="category">
							{% for category in category %}
							<div class="col-md-4">
								<a href="#" class="btn btn-default" style="width:100%">{{category.name}}</a>
							</div>
							{% endfor %}
						</div>
					</div>
				</div>
				<section class="invoice">

													<button type="button" class="btn btn-info">
														<i class="fa fa-search"></i>
												</button>
											</a>
												<button name="cart" class="btn btn-success" value="1">
													<i class="fa fa-shopping-cart"></i>
												</button>
											</form>
										</div>
									</div>
								</div>
							</div>
							{# {% endfor %}#}
						</div>
					</div>
				</div>
			</div>
		</div>
</section>
{% endblock %}
{% block script %}
    <script>
    $('.new-book').slick({
  		infinite: true,
  		slidesToShow: 2,
  		slidesToScroll: 1
	});
    </script>
    <script>
    $('.category').slick({
  		infinite: true,
  		slidesToShow: 2,
  		slidesToScroll: 1
	});
    </script>
{% endblock %}

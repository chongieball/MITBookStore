{% extends 'templates/app.twig' %}
{% block title %} Admin Page - MIT Book Store {% endblock %}

{% block nav %}
	{% include 'templates/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>
		        Publisher
		    </h1>
		    <ol class="breadcrumb">
		        <li><a href="{{ path_for('publisher.index')}}"><i class="fa fa-book"></i>Publisher</a></li>
		    </ol>
			{% include 'templates/partials/flash.twig' %}
    	</section>
		<section class="content">
			<div class="box">
		<div class="box-header">
		  <h3 class="box-title">
			<a href="{{path_for('publisher.add')}}" class="btn btn-info"> Add</a>
		  </h3>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
		  <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
			<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Name</th>
					<th>Create at</th>
					<th>Update at</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for table in table %}
				<tr>
					<td>{{table.name}}</td>
					<td>{{table.create_at}}</td>
					<td>{{table.update_at}}</td>
					<td>
						<form class="" action="publisher/softdelete" method="post">
							<button name="id" value="{{table.id}}" class="btn btn-danger" title="Soft Delete">
								<i class="fa fa-trash-o"></i>
							</button>

							<a href="publisher/update/{{table.id}}" class="btn btn-warning" title="Edit">
								<i class="fa fa-pencil"></i>
							</a>
						</form>
					</td>
				</tr>
				{% endfor %}
			</tbody>
			</table>
			</div>
			<!-- /.box-body -->
		  </div>
			</section>
    </div>
{% endblock %}

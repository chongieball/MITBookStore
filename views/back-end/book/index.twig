{% extends 'back-end/app.twig' %}
{% block title %} Admin Page - MIT Book Store {% endblock %}

{% block nav %}
	{% include 'back-end/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>Book</h1>
			    <ol class="breadcrumb">
			        <li><a href="{{ path_for('book.index')}}">
						<i class="fa fa-book"></i>Book</a>
					</li>
			    </ol>
			{% include 'templates/partials/flash.twig' %}
    	</section>
		<section class="content">
			<div class="box">
	            <div class="box-header">
		            <h3 class="box-title">
					<a href="{{path_for('book.add')}}" class="btn btn-info"> Add</a>
				    </h3>
	            </div>
            <!-- /.box-header -->
	            <div class="box-body">
	                <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
						<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
							<thead>
								<tr>
									<th>ISBN</th>
									<th>Title</th>
									<th>Publish Year</th>
									<th>Images</th>
									<th>Price</th>
									<th>Stock</th>
									<th>Actions</th>
								</tr>
			                </thead>
			                <tbody>
								{% for table in table %}
					                <tr>
										<td>{{table.isbn}}</td>
										<td>{{table.title}}</td>
										<td>{{table.publish_year}}</td>
										<td>
										<center>
											<img src="{{base_url()}}/upload/{{table.images}}" alt="" width="100px" height="120px"><br>
										</center>
										</td>
										<td>{{table.price}}</td>
										<td>{{table.stock}}</td>
										<td>
											<form class="" action="book/softdelete" method="post">
												<button name="id" value="{{table.id}}" class="btn btn-danger" title="Soft Delete">
													<i class="fa fa-trash-o"></i>
												</button>

												<a href="book/update/{{table.id}}" class="btn btn-warning" title="Edit">
													<i class="fa fa-pencil"></i>
												</a>

												<a href="book/detail/{{table.id}}" class="btn btn-success" title="Detail">
													<i class="fa fa-th-list"></i>
												</a>
												{{csrf.field | raw}}
											</form>
										</td>
					                </tr>
								{% endfor %}
							</tbody>
						</table>
		            </div>
				</div>
            <!-- /.box-body -->
          </div>
		</section>
    </div>
{% endblock %}

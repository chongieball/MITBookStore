{% extends 'back-end/app.twig' %}

{% block nav %}
	{% include 'back-end/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>Book</h1>
		    <ol class="breadcrumb">
		        <li><a href="{{ path_for('book.index')}}"><i class="fa fa-book"></i>Book</a></li>
		    </ol>
    	</section>
		<section class="content">
			{% include 'templates/partials/flash.twig' %}
			<div class="box">
            	<div class="box-header">
	                <h3 class="box-title">
					  <a href="{{path_for('book.add')}}" class="btn btn-info"> Add</a>
				    </h3>
            	</div>
            	<div class="box-body">
              		<div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
						<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
							<thead>
								<tr>
									<th>ISBN</th>
									<th>Title</th>
									<th>Publish Year</th>
									<th>Images</th>
									<th>Price</th>
									<th>Stock</th>
									<th>Actions</th>
								</tr>
                			</thead>
                			<tbody>
							{% for book in book %}
	                			<tr>
									<td>{{book.isbn}}</td>
									<td>{{book.title}}</td>
									<td>{{book.publish_year}}</td>
									<td>
										<center>
											<img src="{{base_url()}}/upload/{{book.images}}" alt="" width="100px" height="120px"><br>
										</center>
									</td>
									<td>{{book.price}}</td>
									<td>{{book.stock}}</td>
									<td>
										<form action="{{path_for('book.softdelete')}}" method="post">
											<button name="id" value="{{book.id}}" class="btn btn-danger" title="Soft Delete">
												<i class="fa fa-trash-o"></i>
											</button>
											<a href="{{path_for('book.update', { id : book.id })}}" class="btn btn-warning" title="Edit">
												<i class="fa fa-pencil"></i>
											</a>
											<a href="{{path_for('book.detail', { id : book.id })}}" class="btn btn-success" title="Detail">
												<i class="fa fa-th-list"></i>
											</a>
											{{csrf.field | raw}}
										</form>
									</td>
	                			</tr>
							{% endfor %}
							</tbody>
						</table>
            		</div>
				</div>
            </div>
		</section>
    </div>
{% endblock %}

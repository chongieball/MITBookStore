{% extends 'back-end/app.twig' %}

{% block nav %}
	{% include 'back-end/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>Add Category</h1>
		    <ol class="breadcrumb">
		        <li><a href="{{ path_for('book.index')}}"><i class="fa fa-book"></i>Book</a></li>
		    </ol>
    	</section>
		<section class="content">
			{% include 'templates/partials/flash.twig' %}
			<div class="box">
            	<div class="box-header">
                	<h3 class="box-title">
  		        	<a href="{{path_for('book.detail', {('id'):id})}}" class="btn btn-info"> Back</a>
			        </h3>
            	</div>
            	<div class="box-body">
					<form role="form" action="{{path_for('book.add.category', {('id'):id})}}" method="POST">
						<div class="form-group {{ errors.category_id ? 'has-error' : '' }}">
							<label class="control-label" for="name">
							{{ errors.category_id ? '<i class="fa fa-times-circle-o"></i>': ''}}
								Category
							</label>
							<select class="form-control select2" style="width: 100%;" name="category_id" id="category_id" >
							{% if old.category_id %}
								<option selected="selected">{{old.category_id}}</option>
							{% endif %}
							{% for category in category %}
								<option value="{{category.id}}">{{category.name}}</option>
							{% endfor %}
							</select>
							{% if errors.category_id %}
								<span class="help-block">{{ errors.category_id | first }}</span>
							{% endif %}
						</div>
						<button type="submit" class="btn btn-primary">Submit</button>
						{{ csrf.field |raw }}
					</form>
				</div>
			</div>
    	</section>
	</div>
{% endblock %}

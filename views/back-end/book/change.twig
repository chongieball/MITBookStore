{% extends 'back-end/app.twig' %}
{% block title %} Admin Page - MIT Book Store {% endblock %}

{% block nav %}
	{% include 'back-end/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>
				Book
		    </h1>
		    <ol class="breadcrumb">
		        <li><a href="{{ path_for('book.index')}}"><i class="fa fa-book"></i>Book</a></li>
		    </ol>
    	</section>
			<section class="content">
				<div class="box">
            <div class="box-header">
              <h3 class="box-title">
  		        <a href="{{ path_for('book.index')}}" class="btn btn-info"> Back</a>
			  </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

<form role="form" action="{{path_for('book.change', {('id'):table.id})}}" method="post" enctype="multipart/form-data">
	<div class="col-lg-3">

		<img src="{{base_url()}}/upload/{{table.images}}" alt="{{table.title}}" class="img img-responsive">
	</div>
	.<div class="col-lg-12">
		<div class="form-group {{ errors.images ? 'has-error' : '' }}">
		<label class="control-label" for="images">
		   {{ errors.images ? '<i class="fa fa-times-circle-o"></i>': ''}}
		Change Images  (<i class="text-danger">*.jpg, *.png, *.gif</i>)
		 </label>
		<input type="file" name="images" class="form-control" id="images" value="{{old.images}}">
		 {% if errors.images %}
		<span class="help-block">{{ errors.images | first }}</span>
		 {% endif %}
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
{{csrf.field | raw}}
</form>


            </div>
        </div>
        <!-- /.box-body -->
        </div>
    </section>
</div>
{% endblock %}

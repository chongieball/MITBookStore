							{% for table in table %}
				                <tr>
									<td>{{table.isbn}}</td>
									<td>{{table.title}}</td>
									<td>{{table.publish_year}}</td>
									<td>{{table.total_page}}</td>
									<td>
										<center>
											<img src="{{base_url()}}/assets/images/{{table.images}}" alt="" class="img img-responsive">
										</center>
									</td>
									<td>{{table.price}}</td>
									<td>{{table.stock}}</td>
									<td>
										<form class="" action="{{ path_for('book.delete')}}" method="post">

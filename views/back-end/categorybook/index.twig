{% extends 'back-end/app.twig' %}
{% block title %} Admin Page - MIT Book Store {% endblock %}

{% block nav %}
	{% include 'back-end/partials/navadmin.twig' %}
{% endblock %}

{% block content %}
    <div class="content-wrapper">
    	<section class="content-header">
    		<h1>
		      Category Book
		    </h1>
		    <ol class="breadcrumb">
		        <li><a href="{{ path_for('category.book.index')}}"><i class="fa fa-book"></i>Category Book</a></li>
		    </ol>
    	</section>
		<section class="content">
			<div class="box">
		<div class="box-header">
		  <h3 class="box-title">
			<a href="#" class="btn btn-info"> Add</a>
		  </h3>
		</div>
		<!-- /.box-header -->
		<div class="box-body">
		  <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
			<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Book id</th>
					<th>Category id</th>
				</tr>
			</thead>
			<tbody>
				{% for table in table %}
				<tr>
					<td>{{table.book_id}}</td>
					<td>{{table.category_id}}</td>
				</tr>
				{% endfor %}
			</tbody>
			</table>
			</div>
			<!-- /.box-body -->
		  </div>
			</section>
    </div>
{% endblock %}
